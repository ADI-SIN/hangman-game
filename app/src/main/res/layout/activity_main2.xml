<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@android:color/black"
    tools:context="com.example.adityasi.hhaannggmann.Main2Activity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/hm5"
        android:id="@+id/im" />

    <TextView
        android:text="GUESS THE WORD"
        android:ems="20"
        android:textColor="@android:color/holo_red_light"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:id="@+id/textView"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/editText"
        android:layout_alignStart="@+id/editText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="      * * * * *"
        android:textColor="@android:color/white"

        android:ems="7"
        android:id="@+id/edit"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:layout_alignBaseline="@+id/hint"
        android:layout_alignBottom="@+id/hint"
        android:layout_alignLeft="@+id/button3"
        android:layout_alignStart="@+id/button3" />

    <Button
        android:text="HINT"
        android:textColor="@android:color/holo_blue_bright"
        android:onClick="buttonClick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/hint"
        android:background="@android:color/holo_orange_dark"
        android:layout_marginTop="21dp"
        android:layout_marginRight="35dp"
        android:layout_marginEnd="35dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="your guess"

        android:textColor="@android:color/holo_blue_dark"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/button3"
        android:background="@android:color/holo_green_light"
        android:layout_marginTop="67dp"
        android:layout_below="@+id/hint"
        android:layout_alignRight="@+id/hint"
        android:layout_alignEnd="@+id/hint"
        android:layout_marginRight="44dp"
        android:layout_marginEnd="44dp" />

    <Button
        android:text="refresh"
        android:textColor="@android:color/black"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/button2"
        android:onClick="clear"
        android:background="@android:color/holo_blue_bright"
        android:layout_marginBottom="13dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/button3"
        android:layout_alignStart="@+id/button3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:text="CHANCES LEFT:10                                                                                       ."
        android:ems="25"
        android:id="@+id/editText"
        android:textColor="@android:color/holo_orange_light"
        android:textSize="25dp"
        android:singleLine="false"

        android:layout_marginRight="14dp"
        android:layout_marginEnd="14dp"
        android:layout_marginTop="59dp"
        android:layout_below="@+id/button3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textAppearance="@style/TextAppearance.AppCompat" />


</RelativeLayout>
